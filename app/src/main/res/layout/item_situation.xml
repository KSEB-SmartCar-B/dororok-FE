<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_situation"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/situation_dororokpick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/high_dark"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="장르"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_situation"
        app:layout_constraintEnd_toEndOf="@id/iv_situation"
        app:layout_constraintStart_toStartOf="@id/iv_situation"
        app:layout_constraintTop_toTopOf="@id/iv_situation" />

</androidx.constraintlayout.widget.ConstraintLayout>