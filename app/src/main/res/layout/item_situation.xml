<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageButton
        android:id="@+id/ib_situation"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:background="@drawable/my_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상황"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ib_situation"
        app:layout_constraintEnd_toEndOf="@id/ib_situation"
        app:layout_constraintStart_toStartOf="@id/ib_situation"
        app:layout_constraintTop_toTopOf="@id/ib_situation" />


</androidx.constraintlayout.widget.ConstraintLayout>